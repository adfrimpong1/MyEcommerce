@model Dotnet6MvcLogin.Models.Domain.Item

@{

}



@Html.ValidationSummary()
<div class="container">
    <div class="row">
        <div class="col-md-6 center-block">
            <h3>Edit Item</h3>
            <form asp-action="Edit" method="post" enctype="multipart/form-data">
                <input type="hidden" class="input" asp-for="Id">

                <div class="form-group">
                    <label>Item Name</label>
                    <input type="text" class="form-control" asp-for="ItemName" />
                    <span class="text-danger" asp-validation-for="ItemName"></span>
                </div>

                <div class="form-group">
                    <div class="form-group col-4 p-0">
                        <label asp-for="ImageFile" class="control-label"></label>
                        <input type="text" class="input" asp-for="ItemImage" readonly>
                    </div>
                    <div class="col-1 p-0">
                    </div>
                    <div class="form-group col-7 p-0">
                        <div class="input-group custom-file-button mt-5 pt-5">
                            <input asp-for="ImageFile" class="form-control custom-file-input" id="customFile">
                            <label class="input-group-text" for="customFile">Browse</label>
                        </div>
                    </div>
                </div>

                <div class="form-group">
                    <label>Item Desciption</label>
                    <input type="text" class="form-control" asp-for="ItemDescription" />

                </div>

                <div class="form-group">
                    <label>Item Size</label>
                    <input type="number" class="form-control" asp-for="ItemSize" />
                    <span class="text-danger" asp-validation-for="ItemSize"></span>
                </div>

                <div class="form-group">
                    <label>Item Price</label>
                    <input type="text" class="form-control" asp-for="Price" />
                    <span class="text-danger" asp-validation-for="Price"></span>
                </div>

                <div class="form-group">
                    <label>Item Quantity</label>
                    <input type="number" class="form-control" asp-for="Quantity" />
                    <span class="text-danger" asp-validation-for="Quantity"></span>
                </div>

                <div class="form-group">
                    <label asp-for="Categories" class="w-40">Genre</label>
                    <select asp-items="Model.MultiCategoryList" class="input" asp-for="Categories" multiple>
                        <option value="">--select--</option>
                    </select>
                </div>
                <div class="message-box pd-x-28 error">
                    <span asp-validation-for="Categories"> </span>
                </div>

                <div class="form-group">
                    <label>Made In (Country/State/Region)</label>
                    <input type="text" class="form-control" asp-for="MadeIn" />
                    <span class="text-danger" asp-validation-for="MadeIn"></span>
                </div>

                <div class="form-group">
                    <label>Release Year</label>
                    <input type="text" class="form-control" asp-for="ReleaseYear" />
                    <span class="text-danger" asp-validation-for="ReleaseYear"></span>
                </div>





                @if (TempData["msg"] != null)
                {
                    <div class="form-group">
                        <span class="text-info">@TempData["msg"]</span>
                    </div>
                }

                <button type="submit" class="btn btn-info">Submit</button>

                @*<input type="submit"  value="Add" asp-action="Add" class="btn btn-primary" />*@

                <a class="btn btn-secondary" href="/Item/ItemList">All records</a>
            </form>
        </div>
    </div>
</div>
