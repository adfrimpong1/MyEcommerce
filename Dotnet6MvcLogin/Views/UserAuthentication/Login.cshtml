@model Dotnet6MvcLogin.Models.DTO.LoginModel
@{
    Layout = null;
}

<!DOCTYPE html>
<html>

<head>
    <title>Login </title>
    <meta name="viewport" content="width=device-width, initial-scale=1.0">

    <link rel="stylesheet" href="/css/login.css">
</head>

<body>
    @Html.ValidationSummary()
    <div class="wrapper">
        <div class="inner">
            <div class="image-holder">
                <img src="/Images/img1.jpg" alt="image">
            </div>
            <form asp-action="Login" method="post">
                <h3>Login </h3>

                <div class="form-wrapper">
                    <input type="text" asp-for="Username" placeholder="Enter Username" class="form-control">
                </div>
                @*<div class="msg">
                    <span class="err" asp-validation-for="Username"></span>
                </div>*@


                <div class="form-wrapper">
                    <input type="password" asp-for="Password" placeholder="Enter Password" class="form-control">
                </div>
                @*<div class="msg">
                    <span asp-validation-for="Password" class="err"></span>
                </div>*@


                @if (TempData["msg"] != null)
                {
                    <div class="msg">@TempData["msg"]</div>
                }
                <button>
                    Login

                </button>

                <a class="text-alert" href="/UserAuthentication/Registration">Not a user? Signup</a>
            </form>
        </div>
    </div>
</body>

</html>



