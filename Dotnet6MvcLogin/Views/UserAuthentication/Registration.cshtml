@model Dotnet6MvcLogin.Models.DTO.RegistrationModel
@{
    Layout = null;
}


<!DOCTYPE html>
<html>

<head>
    <title>How to make registration form using HTML and CSS </title>
    <meta name="viewport" content="width=device-width, initial-scale=1.0">

    <link rel="stylesheet" href="~/css/login.css">
</head>

<body>
    @Html.ValidationSummary()
    <div class="wrapper">
        <div class="inner">
            <div class="image-holder">
                <img src="/Images/img1.jpg" alt="image">
            </div>
            <form asp-action="Registration" method="post">
                <h3>Registration Form</h3>
                <div class="form-group">
                    <input type="text" placeholder="First Name" asp-for="FirstName" class="form-control">
                    @*<span class="text-danger" asp-validation-for="FirstName"></span>*@
                    <input type="text" placeholder="Last Name" asp-for="LastName" class="form-control">
                    @*<span class="text-danger" asp-validation-for="LastName"></span>*@
                </div>
                <div class="form-wrapper">
                    <input type="number" placeholder="Phone Number" asp-for="PhoneNumber" class="form-control">
                    @*<span class="text-danger" asp-validation-for="PhoneNumber"></span>*@
                </div>
                <div class="form-wrapper">
                    <input type="text" placeholder="Email Address" asp-for="Email" class="form-control">
                    @*<span class="text-danger" asp-validation-for="Email"></span>*@
                </div>
                <div class="form-wrapper">
                    <input type="text" placeholder="Username" asp-for="Username" class="form-control">
                    @*<span class="text-danger" asp-validation-for="Username"></span>*@
                </div>

                <div class="form-wrapper">
                    <input type="password" placeholder="password" asp-for="Password" class="form-control">
                    @*<span class="text-danger" asp-validation-for="Password"></span>
                </div>*@

                <div class="form-wrapper">
                    <input type="password" placeholder="ConfirmPassword" asp-for="PasswordConfirm" class="form-control">
                    @*<span class="text-danger" asp-validation-for="PasswordConfirm"></span>*@

                </div>
                <div class="form-group">
                    <button>
                        Register

                    </button>

                    <button asp-action="Login">
                        Login

                    </button>

                </div>

                @if (TempData["msg"] != null)
                {
                    <div class="form-group">
                        <span class="text-info">@TempData["msg"]</span>
                    </div>
                }

            </form>
        </div>
    </div>
</body>

</html>



